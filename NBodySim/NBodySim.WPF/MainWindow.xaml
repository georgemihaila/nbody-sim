        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NBodySim.WPF"
        mc:Ignorable="d"
        Title="N-Body Simulation" Height="450" Width="800">
    <Grid x:Name="LayoutRoot">
        <Image x:Name="SimulationImage"/>
        <Button x:Name="NextFrame_Button" Content="Next" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="NextFrame_Button_Click"/>
    </Grid>
</Window>
